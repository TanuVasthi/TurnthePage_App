<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/muted_brown"
    android:backgroundTintMode="src_in"
    tools:context=".StartActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/start" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="472dp"
        android:fontFamily="@font/playfairdisplaybolditalic"
        android:text="buy second-hand books\n effortlessly"
        android:textAlignment="center"
        android:textColor="@color/brownish_cream"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextButton"
        android:layout_width="147dp"
        android:layout_height="58dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/buttoncolor"
        android:backgroundTint="@color/muted_brown"
        android:fontFamily="@font/bebasregular"
        android:shadowColor="@color/start_screen_color2"
        android:text="Next"
        android:textAlignment="center"
        android:textColor="@color/brownish_cream"
        android:textColorHighlight="@color/start_screen_color2"
        android:textColorHint="@color/start_screen_color2"
        android:textColorLink="@color/start_screen_color2"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:rippleColor="@color/start_screen_color2"
        app:strokeColor="@color/start_screen_color2" />

</androidx.constraintlayout.widget.ConstraintLayout>